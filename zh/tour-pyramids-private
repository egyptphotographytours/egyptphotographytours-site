    <script>
        // Define prices for each tour (ADJUST THESE PRICES AS NEEDED)
        const tourPrices = {
            'pyramids-private': { solo: 150.00, couple: 250.00 },
            'cairo-giza-2day': { solo: 350.00, couple: 600.00 },
            'alexandria-tour': { solo: 220.00, couple: 380.00 },
            'egypt-discovery-7day': { solo: 1900.00, couple: 3500.00 }
        };

        const tourId = 'pyramids-private'; // Define the specific tour ID for this page

        const typeButtons = document.querySelectorAll('.type-btn');
        const dateInput = document.querySelector('.date-input');
        const displayPriceElement = document.querySelector('.display-price');
        const paypalForm = document.querySelector('.paypal-form');
        const buyButton = paypalForm.querySelector('.paypal-buy-button');

        const itemNameInput = paypalForm.querySelector('input[name="item_name"]');
        const amountInput = paypalForm.querySelector('input[name="amount"]');
        const os0Input = paypalForm.querySelector('input[name="os0"]');
        const os1Input = paypalForm.querySelector('input[name="os1"]');

        let selectedType = null;
        let selectedDate = null;

        const today = new Date();
        const yyyy = today.getFullYear();
        const mm = String(today.getMonth() + 1).padStart(2, '0');
        const dd = String(today.getDate()).padStart(2, '0');
        const minDate = `${yyyy}-${mm}-${dd}`;
        dateInput.min = minDate;

        function updateBuyButtonState() {
            if (selectedType && selectedDate) {
                buyButton.removeAttribute('disabled');
                buyButton.textContent = '通过 PayPal 立即预订';
            } else {
                buyButton.setAttribute('disabled', 'true');
                buyButton.textContent = '选择选项以预订';
            }
        }

        function updatePriceAndPayPalForm() {
            let currentPrice = 0;
            if (selectedType && tourPrices[tourId]) {
                currentPrice = tourPrices[tourId][selectedType];
            }
            displayPriceElement.textContent = `$${currentPrice.toFixed(2)} USD`;
            amountInput.value = currentPrice.toFixed(2);
        }

        function updatePayPalCustomFields() {
            const baseItemName = "Private Pyramids Tour"; // Fixed base name for this specific tour

            if (selectedType) {
                os0Input.value = selectedType.charAt(0).toUpperCase() + selectedType.slice(1);
                itemNameInput.value = `${baseItemName} (${os0Input.value})`;
            } else {
                os0Input.value = '';
                itemNameInput.value = baseItemName;
            }

            if (selectedDate) {
                os1Input.value = selectedDate;
            } else {
                os1Input.value = '';
            }
        }

        typeButtons.forEach(button => {
            button.addEventListener('click', () => {
                selectedType = button.dataset.type;
                typeButtons.forEach(btn => btn.classList.remove('selected'));
                button.classList.add('selected');
                updatePriceAndPayPalForm();
                updatePayPalCustomFields();
                updateBuyButtonState();
            });
        });

        dateInput.addEventListener('change', () => {
            selectedDate = dateInput.value;
            updatePayPalCustomFields();
            updateBuyButtonState();
        });

        // Initial updates
        updatePriceAndPayPalForm();
        updatePayPalCustomFields();
        updateBuyButtonState();

        // Language switcher functionality
        function getCurrentPage() {
            const path = window.location.pathname;
            return path.split('/').pop() || 'tour-pyramids-private.html';
        }

        document.addEventListener('DOMContentLoaded', function() {
            const langButton = document.getElementById('language-toggle');
            const langDropdown = document.querySelector('.language-dropdown');
            
            langButton.addEventListener('click', function(event) {
                const isExpanded = langButton.getAttribute('aria-expanded') === 'true';
                langButton.setAttribute('aria-expanded', !isExpanded);
                langDropdown.classList.toggle('show');
                event.stopPropagation();
            });
            
            langDropdown.addEventListener('click', function(event) {
                const link = event.target.closest('a');
                if (link) {
                    event.preventDefault();
                    const selectedLang = link.getAttribute('data-lang');
                    redirectToLanguage(selectedLang);
                    
                    langButton.setAttribute('aria-expanded', 'false');
                    langDropdown.classList.remove('show');
                }
            });
            
            document.addEventListener('click', function(event) {
                if (!langButton.contains(event.target) && !langDropdown.contains(event.target)) {
                    langButton.setAttribute('aria-expanded', 'false');
                    langDropdown.classList.remove('show');
                }
            });
            
            function redirectToLanguage(lang) {
                const currentPage = getCurrentPage();
                
                if (lang === 'en') {
                    window.location.href = `/${currentPage}`;
                } else {
                    window.location.href = `/${lang}/${currentPage}`;
                }
            }
        });
    </script>
</body>
</html>
